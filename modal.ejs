<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<!-- Bootstrap Bundle with Popper -->
<script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
</head>
<body>
    

    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Modal
  </button>
  


  <table id="table " class="table table-bordered">
    <thead id="thead">

    </thead>
    <tbody id="tbody">

    </tbody>
</table>





  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-6">
                        <input type="text" class="form-control" placeholder="name" id="name" aria-describedby="emailHelp">
                    </div>
                    <div class="col-6">
                        <input type="text" class="form-control" placeholder="surname" id="surname" aria-describedby="emailHelp">
                    </div>

                </div>
            </div>
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="btn">Submit</button>
        </div>
      </div>
    </div>
  </div>




  <script>

    $(document).ready(()=>{
        let headerAppended = false;
        var i=0;

        $(document).on('click','#dbtn',function(){
            $(this).closest('tr').remove()
        })
        
        $(document).on('click','#btn',function(){
            i++;
            const name=$('#name').val();
const surname=$('#surname').val()

if (!headerAppended) {
            $('#thead').append('<tr><th>S.No</th><th>Name</th><th>Surname</th></tr>')
            headerAppended=true;
}
$('#tbody').append('<tr><td>'+ i +'</td><td>'+name+'</td><td>'+surname+'</td><td><button class="btn btn-danger" id="dbtn">Delete</td></tr>')

$('#exampleModal').modal('hide');

$('#surname').val(" ")
$('#name').val( " ");
        })
        i<=1000000;
    })



    
  </script>
</body>
</html>